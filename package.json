{
  "name": "hangul-wasm",
  "version": "0.6.2",
  "description": "High-performance Korean Hangul text processing library using WebAssembly",
  "type": "module",
  "main": "hangul-ime.js",
  "types": "hangul-ime.d.ts",
  "files": [
    "hangul.wasm",
    "hangul-ime.js",
    "hangul-ime.d.ts"
  ],
  "exports": {
    ".": {
      "types": "./hangul-ime.d.ts",
      "import": "./hangul-ime.js"
    },
    "./wasm": "./hangul.wasm"
  },
  "scripts": {
    "build": "task build:wasm",
    "test": "task test",
    "test:e2e": "playwright test",
    "bench": "bun bench/benchmark.js",
    "check": "task check:all",
    "fmt": "biome check --write *.js tests/**/*.ts",
    "lint": "biome lint *.js tests/**/*.ts",
    "prepublishOnly": "task build:wasm"
  },
  "keywords": [
    "hangul",
    "korean",
    "ime",
    "input-method",
    "wasm",
    "webassembly",
    "zig",
    "text-processing",
    "decomposition",
    "composition",
    "jamo"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pastel-sketchbook/hangul-wasm.git"
  },
  "bugs": {
    "url": "https://github.com/pastel-sketchbook/hangul-wasm/issues"
  },
  "homepage": "https://github.com/pastel-sketchbook/hangul-wasm#readme",
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@playwright/test": "^1.57.0",
    "@types/bun": "^1.3.6",
    "typescript": "~5.9.0"
  }
}
